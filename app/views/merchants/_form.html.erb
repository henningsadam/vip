<%= simple_form_for(@merchant, :html => { :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :merchant_id, label: "Merchant ID", placeholder: "Merchant ID" %>
  <%= f.input :company_name, label: "Company Name", placeholder: "Company Name" %>
  <%= f.input :dba_name, label: "DBA Name", placeholder: "DBA Name" %>
  <%= f.association :institution, label: "Institution", label_method: :institution_name %>
  <%= f.button :submit %>
<% end %>