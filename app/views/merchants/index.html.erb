<h1>Listing merchants</h1>

<table>
  <tr>
    <th>Merchant ID</th>
    <th>Company Name</th>
    <th>DBA Name</th>
    <th>Institution ID</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @merchants.each do |merchant| %>
  <tr>
    <td><%= merchant.merchant_id %></td>
    <td><%= merchant.company_name %></td>
    <td><%= merchant.dba_name %></td>
    <td><%= Institution.find(merchant.institution_id).institution_name %></td>
    <td><%= link_to 'Show', merchant %></td>
    <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
    <td><%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

